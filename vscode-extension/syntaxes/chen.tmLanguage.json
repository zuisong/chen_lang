{
  "name": "Chen Lang",
  "scopeName": "source.chen",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#objectLiteral" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.chen",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.chen",
          "match": "\\b(if|else|for|while|break|continue|return|try|catch|finally|throw)\\b"
        },
        {
          "name": "keyword.other.chen",
          "match": "\\b(let|def|import)\\b"
        },
        {
          "name": "constant.language.chen",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.chen",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.chen",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.chen",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.chen",
          "match": "\\b(def)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.other.chen" },
            "2": { "name": "entity.name.function.chen" }
          }
        },
        {
          "name": "support.function.chen",
          "match": "\\b(println|print)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.chen",
          "match": "(\\+|\\-|\\*|\\/|%|==|!=|>|<|>=|<=|&&|\\|\\||!|=)"
        }
      ]
    },
    "objectLiteral": {
      "patterns": [
        {
          "name": "punctuation.section.mapping.begin.chen",
          "match": "\\$\\{"
        }
      ]
    }
  }
}
