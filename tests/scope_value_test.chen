# Test 1: Simple block assignment
let x = {
    let a = 10
    let b = 20
    a + b
}
if x == 30 {
    println("Test 1 Passed")
} else {
    println("Test 1 Failed: Expected 30, got " + x)
}

# Test 2: Nested blocks
let y = {
    let c = 5
    {
        let d = 10
        c + d
    }
}
if y == 15 {
    println("Test 2 Passed")
} else {
    println("Test 2 Failed: Expected 15, got " + y)
}

